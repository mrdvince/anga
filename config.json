{
    "name": "Anga",
    "n_gpu": 1,
    "arch": {
        "type": "EffientNetB0",
        "args": {}
    },
    "data_loader": {
        "type": "PlantVillageLoader",
        "args": {
            "data_dir": "data/PlantVillage/train/",
            "batch_size": 8,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "test_data_loader": {
        "type": "PlantVillageLoader",
        "args": {
            "data_dir": "data/PlantVillage/test/",
            "batch_size": 8,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy",
        "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 5,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}